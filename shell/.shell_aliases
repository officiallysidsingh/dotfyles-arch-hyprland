# ------------------------------------------------------------
# CD Command Aliases
# ------------------------------------------------------------

alias ..="cd .."
alias ...="cd .. && cd .."

# ------------------------------------------------------------
# LS Command Aliases
# ------------------------------------------------------------

alias ll="ls -al"
alias l.='ls -a | grep "^\."'

# ------------------------------------------------------------
# FZF Aliases
# ------------------------------------------------------------

alias ff="cd \$(fd -t d | fzf --height 40%)"

# ------------------------------------------------------------
# TMUX Aliases
# ------------------------------------------------------------
alias t="tmux"
alias tf="tmuxifier"

# ------------------------------------------------------------
# Nvim Aliases
# ------------------------------------------------------------

alias v="nvim"
alias dots="cd ~/.config && nvim"

# ------------------------------------------------------------
# Pacman & Yay Command Aliases
# ------------------------------------------------------------

alias pac="sudo pacman -S"
alias pacup="sudo pacman -Syyu"
alias yayup="yay -Sua"
alias pacdep="sudo pacman -Qdt"
alias cleanup="sudo pacman -Rns $(pacman -Qdtq)"

# ------------------------------------------------------------
# Install Command Aliases
# ------------------------------------------------------------

alias cpu5="ps auxf | sort -nr -k 3 | head -5"
alias mem5="ps auxf | sort -nr -k 4 | head -5"

# ------------------------------------------------------------
# Delete Command Aliases
# ------------------------------------------------------------

alias rm="rm -rf"
