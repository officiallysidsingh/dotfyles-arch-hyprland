{
  // ------------------------------------------------------------------------------------
  // Pre-defined Modules
  // ------------------------------------------------------------------------------------

  // Pulseaudio

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰖁 0%",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": "󰗿 {icon} {format_source}",
    "format-icons": {
        "headphone": " ",
        "default": ["", "󰕾 ", " "]
    },
    "on-click": "pavucontrol"
  },

  // Backlight

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["", ""]
  },

  // Clock

  "clock": {
    "timezone": "Asia/Kolkata",
    "interval": 60,
    "format": "{:%I:%M} 󰥔",
    "max-length": 25
  },

  // Workspaces

  "hyprland/workspaces": {
    "format": "{id}: {icon} ",
    "format-icons": {
      "active": "",
      "default": ""
    }
  },

  // Bluetooth

  "bluetooth": {
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "blueman-manager"
  },

  // Battery

  "battery": {
    "interval": 10,
    "states": {
        "warning": 30,
        "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-plugged": "{capacity}% 󰂄",
    "format-icons": [" ", " ", " ", " ", " "]
  },

  // Network

  "network": {
    "format": " {ifname}",
    "tooltip-format": " {ifname} via {gwaddri}",
    "format-wifi": "  {signalStrength}%",
    "tooltip-format-wifi": "  {essid}",
    "format-ethernet": "󰈁 {ipaddr}",
    "tooltip-format-ethernet": "󰈁 {ifname}",
    "format-disconnected": "",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 15
  },

  // ------------------------------------------------------------------------------------
  // Custom Modules
  // ------------------------------------------------------------------------------------

  // Arch Logo

  "custom/arch-pill": {
    "format": ""
  },

  // Power Menu

  "custom/exit": {
    "format": "",
    "on-click": "wlogout",
    "tooltip": false
  },

}
