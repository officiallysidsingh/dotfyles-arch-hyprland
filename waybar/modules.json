{
  // ------------------------------------------------------------------------------------
  // Arch Pill
  // ------------------------------------------------------------------------------------

  "custom/arch-pill": {
    "format": "",
    "tooltip": false
  },

  // ------------------------------------------------------------------------------------
  // Battery
  // ------------------------------------------------------------------------------------

  "battery": {
    "interval": 10,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-plugged": "󰂄 {capacity}%",
    "format-icons": [" ", " ", " ", " ", " "]
  },

  // ------------------------------------------------------------------------------------
  // Clock
  // ------------------------------------------------------------------------------------

  "clock": {
    "timezone": "Asia/Kolkata",
    "interval": 60,
    "format": "󰥔 {:%I:%M}",
    "tooltip-format": "{:%a, %d/%m/%Y}",
    "max-length": 25
  },

  // ------------------------------------------------------------------------------------
  // Hardware Group
  // ------------------------------------------------------------------------------------

  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["cpu", "memory"]
  },

  "cpu": {
    "format": "{usage}%    "
  },

  "memory": {
    "format": "{percentage}%  "
  },

  // ------------------------------------------------------------------------------------
  // Workspaces
  // ------------------------------------------------------------------------------------

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "default": "",
      "active": ""
    },
    "persistent_workspaces": {
      "eDP-1": 3
    }
  },

  // ------------------------------------------------------------------------------------
  // Network
  // ------------------------------------------------------------------------------------

  "network": {
    "interface": "wlan0",
    "interval": 2,
    "format": " {ifname}",
    "format-wifi": "  {essid}",
    "format-ethernet": "󰈁 {ipaddr}",
    "tooltip-format": " {bandwidthDownBytes}  {bandwidthUpBytes}",
    "max-length": 15
  },

  // ------------------------------------------------------------------------------------
  // Backlight
  // ------------------------------------------------------------------------------------

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": [" ", " "]
  },

  // ------------------------------------------------------------------------------------
  // Pulseaudio
  // ------------------------------------------------------------------------------------

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰖁 0%",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": "󰗿 {icon} {format_source}",
    "format-icons": {
      "headphone": " ",
      "default": ["", "󰕾 ", " "]
    },
    "on-click": "pavucontrol"
  },

  // ------------------------------------------------------------------------------------
  // Power Menu
  // ------------------------------------------------------------------------------------

  "custom/exit": {
    "format": "",
    "on-click": "wlogout -b 4",
    "tooltip": false
  }
}
